{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "frontend"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",        
        "assets/css/plugins/select2/select2.min.css",
        "assets/css/plugins/dataTables/datatables.min.css",
        "assets/css/plugins/iCheck/custom.css",
        "assets/css/plugins/chosen/bootstrap-chosen.css",
        "assets/css/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css",
        "assets/css/plugins/colorpicker/bootstrap-colorpicker.min.css",
        "assets/css/plugins/cropper/cropper.min.css",
        "assets/css/plugins/switchery/switchery.css",
        "assets/css/plugins/jasny/jasny-bootstrap.min.css",
        "assets/css/plugins/nouslider/jquery.nouislider.css",
        "assets/css/plugins/datapicker/datepicker3.css",
        "assets/css/plugins/ionRangeSlider/ion.rangeSlider.css",
        "assets/css/plugins/ionRangeSlider/ion.rangeSlider.skinFlat.css",
        "assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css",
        "assets/css/plugins/clockpicker/clockpicker.css",
        "assets/css/plugins/daterangepicker/daterangepicker-bs3.css",       
        "assets/css/plugins/touchspin/jquery.bootstrap-touchspin.min.css",
        "assets/css/plugins/dualListbox/bootstrap-duallistbox.min.css"       
      ],
      "scripts": [
        "assets/js/jquery-3.1.1.min.js",
        "assets/js/bootstrap.min.js",
        "assets/js/plugins/metisMenu/jquery.metisMenu.js",
        "assets/js/plugins/slimscroll/jquery.slimscroll.min.js",
        "assets/js/plugins/dataTables/datatables.min.js",
        "assets/js/inspinia.js",
        "assets/js/plugins/pace/pace.min.js",
        "assets/js/plugins/chosen/jquery.chosen.js",
        "assets/js/plugins/jsKnob/jquery.knob.js",
        "assets/js/plugins/jasny/jasny-bootstrap.min.js",
        "assets/js/plugins/datapicker/bootstrap-datepicker.js",
        "assets/js/plugins/nouslider/jquery.nouislider.min.js",
        "assets/js/plugins/switchery/switchery.js",
        "assets/js/plugins/ionRangeSlider/ion.rangeSlider.min.js",
        "assets/js/plugins/iCheck/icheck.min.js",
        "assets/js/plugins/metisMenu/jquery.metisMenu.js",
        "assets/js/plugins/colorpicker/bootstrap-colorpicker.min.js",
        "assets/js/plugins/clockpicker/clockpicker.js",
        "assets/js/plugins/cropper/cropper.min.js",
        "assets/js/plugins/fullcalendar/moment.min.js",
        "assets/js/plugins/daterangepicker/daterangepicker.js",
        "assets/js/plugins/select2/select2.full.min.js",
        "assets/js/plugins/touchspin/jquery.bootstrap-touchspin.min.js",
        "assets/js/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js",
        "assets/js/plugins/dualListbox/jquery.bootstrap-duallistbox.js",
        "assets/js/plugins/sweetalert/sweetalert.min.js",
        "assets/js/plugins/toastr/toastr.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
